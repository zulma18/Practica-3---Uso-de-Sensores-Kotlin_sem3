<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/proximityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#67C2F2"
    android:padding="20dp"
    tools:context=".ProximityActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor de Proximidad"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/proximityButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/proximityButton"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#7B1FA2"
        android:text="VALOR: 0.0"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo" />

</androidx.constraintlayout.widget.ConstraintLayout>
